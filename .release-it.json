{
  "scripts": {
    "release": "dotenv release-it --"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "assets": ["builds/*.xpi"]
  },
  "hooks": {
    "after:bump": "npm run build",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
